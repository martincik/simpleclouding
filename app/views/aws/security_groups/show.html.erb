<% content_for :aws_content do -%>

  <%= context_links(link_to('Security Groups', cloud_aws_security_groups_url), 
    link_to(h(@aws_security_group.security_group.name), 
      show_cloud_aws_security_group_url(@cloud.id, :name => @aws_security_group.security_group.name)) ) %>
  <br /><br />

  <table class="show-table" cellpadding="0" cellspacing="0">
  <tbody>

    <tr>
      <th>Group Name:</th>
      <td><%= h(@aws_security_group.security_group.name) %></td>
    </tr>
    
    <tr>
      <th>
        Owner:<br />
        <span class="help">(Account Number)</span>
      </th>
      <td><%= h(@aws_security_group.security_group.owner) %></td>
    </tr>
    
    <tr>
      <th>Description:</th>
      <td><%= h(@aws_security_group.security_group.description) %></td>
    </tr>
    
  </tbody>
  </table>
  <br />
  
  <%= render :partial => 'security_group_ingress', :locals => { 
    :security_group_ingresses => @aws_security_group.security_group_ingresses,
    :security_group => @aws_security_group.security_group
  } %>
  
  <br />
  
  <%= render :partial => 'security_group_ip_ingress', :locals => { 
     :security_group_ip_ingresses => @aws_security_group.security_group_ip_ingresses,
     :security_group => @aws_security_group.security_group
  } %>
  
<% end -%>

<%= render :file => 'aws/sublayout/cloud_aws' %>